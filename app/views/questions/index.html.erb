<div class="container">
  <h2 class="title-md mb">
    Недавно добавились
  </h2>

  <div class="users-box">
    <% @users.each do |user| %>
      <%= render partial: "users/user_avatar", locals: { user: user } %>
    <% end %>
  </div>
</div>

<div class="container mt-sm">
  <h2 class="title-lg mb-sm">
    Облако #Хэш_Тегов
  </h2>
  <%= render @hash_tags %>
</div>

<% @questions.each do |question| %>
  <div class="mt-sm container <%= "hidden" if question.hidden? %>">
    <%= render question %>
  </div>
<% end %>
