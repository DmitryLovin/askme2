<div class="container">
  <h2 class="title-md mb">
    Недавно добавились
  </h2>

  <div class="users-box">
    <% @users.each do |user| %>
      <%= render partial: "users/user_avatar", locals: { user: user } %>
    <% end %>
  </div>
</div>

<div class="container mt-sm">
  <h2 class="title-lg">
    <% count = @questions.count %>
    <%= inclination(count, "Последний", "Последние", "Последние") %>
    <%= count %>
    <%= inclination(count, "вопрос", "вопроса", "вопросов") %>
    на сайте
  </h2>
</div>
<% @questions.each do |question| %>
  <div class="mt-sm container <%= "hidden" if question.hidden? %>">
    <p class="mb text-sm text-grey">
      Вопрос <%= link_to "##{question.id}", question_path(question) %>
    </p>
    <%= render question %>
  </div>
<% end %>
