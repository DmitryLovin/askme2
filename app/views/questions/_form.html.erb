<% if @question.errors.any? %>
  <div class="errors mt-sm mb-sm">
    <% @question.errors.full_messages.each do |message| %>
      <p><%= message %></p>
    <% end %>
  </div>
<% end %>

<%= form_with model: question, data: {turbo: false} do |form| %>
  <p><%= form.label :body, 'Текст вопроса' %></p>
  <p><%= form.text_area :body, rows: 5, class: 'form-text-area' %></p>

  <p class="mt"><%= form.label :user_id %></p>
  <p><%= form.text_field :user_id, class: 'form-text-field' %></p>

  <p class="mt"><%= form.submit 'Сохранить', class: 'button button-main' %>
    <% unless main %>
      или <%= link_to "вернуться", :back %>
    <% end %>
  </p>
<% end %>
